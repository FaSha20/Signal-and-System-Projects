close all

ts = 0.01;
t = 0:ts:30-ts;

amplitude = 0.009;

x = coding_amp('mignal', 2);
xNoisy = x + amplitude * rand(1, length(x));

y = decoding_amp(x, 2);
yNoisy = decoding_amp(xNoisy, 2);

disp('Decoded message of Original signal: ')
disp(y);
disp('Decoded message of Noisy signal: ')
disp(yNoisy);

figure 
subplot(2,1,1)
plot(t,x)
title('Original Signal', 'FontSize', 15);
subplot(2,1,2)
plot(t,xNoisy);
title('Noisy Signal', 'FontSize', 15);